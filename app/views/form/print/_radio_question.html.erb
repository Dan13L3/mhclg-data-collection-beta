<div class="cell">
  <strong class="cell question_cell">
    <%= question["header"].html_safe.present? ?  question["header"].html_safe : "missing question header"%>
  </strong>
</div>
<div class="grid">
  <div>
    <% question["answer_options"].each do |index, answer_option| %>
      <% if index.to_i.even? %>
        <input type="checkbox"/>
        <label><%=answer_option %></label><br/>
      <% end %>
    <%end %>
  </div>
  <div>
    <% question["answer_options"].each do |index, answer_option| %>
      <% if !index.to_i.even? %>
        <input type="checkbox"/>
        <label><%=answer_option %></label><br/>
      <% end %>
    <%end %>
  </div>
</div>
